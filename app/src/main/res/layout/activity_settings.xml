<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SettingsActivity"
    android:background="@drawable/background"
    android:focusable="true"
    android:visibility="visible">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tvSettingsTitle"
        android:width="275dp"
        android:height="100dp"
        android:textColor="#1021be"
        android:textStyle="bold|italic"
        android:textSize="25pt"
        android:textIsSelectable="true"
        android:textAlignment="center"
        android:typeface="normal"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/btn_back"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:minWidth="250dp"
        android:minHeight="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LEVEL"
        android:id="@+id/tvLevel"
        android:textAlignment="center"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="#0b11b4"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="8pt"

        android:autoText="true"
        android:layout_above="@+id/btn_level"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEGGAR"
        android:id="@+id/btn_level"
        android:width="200dp"
        android:height="50dp"
        android:textAlignment="center"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="#ffffff"
        android:background="#0f23bb"
        android:textSize="10pt"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btn_resetHighScore"
        android:width="200dp"
        android:height="50dp"
        android:textAlignment="center"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="#ffffff"
        android:background="#0f23bb"
        android:textSize="10pt"
        android:typeface="sans"
        android:textStyle="bold"
        android:layout_above="@+id/switchSound"
        android:layout_alignLeft="@+id/btn_level"
        android:layout_alignStart="@+id/btn_level"
        android:layout_marginBottom="45dp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOUND"
        android:id="@+id/switchSound"
        android:checked="false"
        android:textSize="12pt"
        android:textStyle="bold"
        android:textColor="#0e16b5"
        android:typeface="normal"
        android:layout_above="@+id/levelDropDown"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIGH SCORES"
        android:id="@+id/tvHighScore"
        android:textAlignment="center"
        android:layout_alignWithParentIfMissing="false"
        android:textColor="#0b11b4"
        android:textStyle="bold"
        android:typeface="sans"
        android:textSize="8pt"
        android:layout_above="@+id/btn_resetHighScore"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/levelDropDown"
        android:prompt="@string/levelPrompt"
        android:spinnerMode="dialog"
        android:entries="@array/levelArray"
        android:focusable="true"
        android:textAlignment="center"
        android:visibility="invisible"
        android:background="#0f23bb"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/tvHighScore"
        android:layout_toEndOf="@+id/tvHighScore" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:layout_gravity="left|top"
        android:background="@drawable/menu"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:maxWidth="80px"
        android:minHeight="34px" />

</RelativeLayout>

